{
  "name": "eduvault-hybrid-mvp",
  "version": "1.0.0",
  "description": "Offline-first educational platform with multilingual voice interaction and accessibility",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "start:dev": "node scripts/dev-server.js",
    "start:safe": "npm run lint:dev && npm run type-check && npm start",
    "build": "react-scripts build",
    "test": "jest --coverage --watchAll=false --passWithNoTests",
    "test:watch": "jest --watch",
    "test:ci": "jest --coverage --watchAll=false --passWithNoTests --ci",
    "test:integration": "jest --testPathPattern=integration --coverage",
    "test:performance": "jest --testPathPattern=performance",
    "test:a11y": "jest --testPathPattern=accessibility",
    "test:mutation": "stryker run",
    "test:smoke": "jest --testPathPattern=smoke",
    "eject": "react-scripts eject",
    "lint": "eslint . --ext .ts,.tsx --max-warnings 0",
    "lint:dev": "eslint . --ext .ts,.tsx --config .eslintrc.dev.json --max-warnings 50",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "lint:fix:dev": "eslint . --ext .ts,.tsx --config .eslintrc.dev.json --fix",
    "type-check": "tsc --noEmit",
    "type-check:dev": "tsc --noEmit --skipLibCheck",
    "verify": "npm run lint && npm run type-check && npm run test:ci",
    "verify:dev": "npm run lint:dev && npm run type-check:dev && npm run test:ci",
    "verify:full": "npm run lint && npm run type-check && npm run test:ci && npm run test:integration && npm run test:a11y",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json,css}\"",
    "audit:security": "npm audit --audit-level=moderate",
    "audit:accessibility": "lighthouse http://localhost:3000 --only-categories=accessibility --output=json --output-path=./lighthouse-a11y.json",
    "deploy:staging": "echo 'Deploy to staging environment'",
    "deploy:production": "echo 'Deploy to production environment'",
    "precommit": "npm run lint:fix && npm run format && npm run type-check",
    "prepush": "npm run verify:full",
    "dev": "npm run start:dev",
    "dev:safe": "npm run start:safe"
  },
  "dependencies": {
    "ajv": "8.17.1",
    "ajv-keywords": "5.1.0",
    "axios": "^1.6.2",
    "idb": "^7.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "workbox-window": "^7.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "react-scripts": "5.0.1",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
